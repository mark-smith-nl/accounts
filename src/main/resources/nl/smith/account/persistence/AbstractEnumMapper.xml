<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nl.smith.account.persistence.AbstractEnumMapper">
	<select id="getEnumByClassNameAndValue" parameterType="map"
		resultType="map">
		SELECT
		name
		, description
		FROM
		account.#{enumClassname}
		WHERE
		name = #{name}
	</select>

	<select id="persist" parameterType="map">
		INSERT INTO account.#{enumClassname}(name, description)
		VALUES (
        #{name}
		, #{description}
		)
	</select>

	<update id="update" parameterType="map">
		UPDATE account.#{enumClassname}
		SET description = #{description}
		WHERE
		name = #{name}
	</update>
</mapper>